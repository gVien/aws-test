<%= form_for @text do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.label :phone_number, class: "sr-only" %>
    <%= f.telephone_field :phone_number, placeholder: "Enter 10-digit phone number, e.g. 1234567890", class: "form-control", :required => true, pattern: "[0-9]{10}"   %>
  </div>

 <div class="form-group">
    <%= f.text_area :message, class: "form-control text-area", placeholder: "What would you like to send?", :required => true %>
  </div>

  <%= f.submit "Send", class: "btn btn-primary btn-send", data: { disable_with: "Sending..." } %>
<% end %>